N8N_WEBHOOK_BASE_URL=http://localhost:5678
CHATBOT_WEBHOOK_URL=YOUR_WEBHOOK_URL_HERE
STORY_NARRATOR_WEBHOOK=YOUR_STORY_WEBHOOK_HERE

# Chatbot Configuration
